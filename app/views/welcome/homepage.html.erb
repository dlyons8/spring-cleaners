<div id="container">  

  <div id="ad-half">
  </div>

  <div id="login-half">
      <div id="login-section">
          <div id="form">
            <%= form_with url: sessions_path, method: "post", html: {class: ""} do |f| %>
              <%= f.label :email %>
              <%= f.email_field :email, :placeholder => 'E-mail address' %>
              <%= f.label :password %>
              <%= f.password_field :password, :placeholder => 'Password' %>
              <%= f.submit "Log In", :class => 'ui button' %>
              <% end %>

              <div class="">
                or sign in using
              </div>

              <div class="ui mini images">
                <a href="#"><%= image_tag 'facebook-icon.svg', alt: 'Facebook icon', class: 'ui image' %></a> <a href="#"><%= image_tag 'twitter-icon.svg', alt: 'Twitter icon', class: 'ui image' %></a> <a href="#"><%= image_tag 'google-icon.png', alt: 'Google icon', class: 'ui image' %></a> <a href="#"><%= image_tag 'amazon-icon.png', alt: 'Amazon icon', class: 'ui image' %></a>
              </div>

          </div>
      </div>

      <div id="signup-or-login">
        <h4>Are you ready for the Spring?</h4>
        Get a cleaner today.
        <h3><%= link_to "Sign up", signup_url %></h3> or <h3><%= link_to "Log in", login_url %></h3>
      </div>
  </div>

</div>