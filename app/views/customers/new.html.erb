<% content_for :title, "Customer Sign Up" %>

<div class="ui middle aligned center aligned grid">

  <div class="column">
    

    <h2 class="ui teal image header">
      <%= image_tag 'spring-cleaners-logos/profile.png', alt: 'default', class: 'ui fluid image' %>
      <div class="content">
        Cleaner Information
      </div>
    </h2>
    
    <%= form_with model: @customer, class: "ui form", local: true do |f| %>

      <div class="ui segment">

        <div class="two fields">

          <%= f.label :name %>
          
          <div class="field">
            <%= f.text_field :first_name, :placeholder => 'First name' %>
          </div>

          <div class="field">
            <%= f.text_field :last_name, :placeholder => 'Last name' %>
          </div>

        </div>

        <div class="field">
          <%= f.label :phone %>
          <%= f.telephone_field :phone, :placeholder => 'Phone' %>
        </div>

        <%= f.fields_for :address do |addr| %>

          <div class="twelve wide field">
            <%= addr.label :street_address %>
            <%= addr.text_field :street_address %>
          </div>

          <div class="two fields">

            <%= addr.label :neighborhood %>
            <div class="field">
              <%= addr.text_field :neighborhood %>
            </div>
              
            <%= addr.label :city %>
            <div class="field">
              <%= addr.text_field :city %>
            </div>
              
          </div>
        <% end %>

        <%= f.submit "Submit", :class => "ui fluid large teal submit button" %>

      </div>

      <div class="ui error message"></div>
      
      <div class="ui segment">Part 2 of 2</div>

    <% end %>

  </div>

</div>