<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag 'logo.png', alt: 'Logo', class: 'image circular' %>
      <div class="content">
        Sign up for an account
      </div>
    </h2>
    <div class="ui form segment">
      <%= form_with model: @user, html: {class: "ui form"} do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, :placeholder => 'E-mail address' %>
      </div>
      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, :placeholder => 'First name' %>
      </div>
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, :placeholder => 'Last name' %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, :placeholder => 'Password' %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>
      </div>
        <%= f.submit "Sign Up", :class => 'ui fluid large teal submit button' %>
      <% end %>
      <div class="ui field">
        <div class="ui field">
          or sign up using
        </div>
         <div class="ui mini images">
          <a href="#"><%= image_tag 'facebook-icon.svg', alt: 'Facebook icon', class: 'ui image' %></a> <a href="#"><%= image_tag 'twitter-icon.svg', alt: 'Twitter icon', class: 'ui image' %></a> <a href="#"><%= image_tag 'google-icon.png', alt: 'Google icon', class: 'ui image' %></a> <a href="#"><%= image_tag 'amazon-icon.png', alt: 'Amazon icon', class: 'ui image' %></a>
        </div>
      </div>
    </div>
  </div>
</div>
