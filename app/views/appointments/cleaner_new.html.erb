<div class="ui form">
    <%= form_with(model: @cleaner, url: "/cleaners/#{@cleaner.id}/appointments", method: "post", local: true) do |f| %>
        <table class="ui compact celled definition table">
        <thead>
            <tr>
            <th></th>
            <th>Date</th>
            <th>Time Slot</th>
            <th>Neighborhood, City</th>
            <th>Details</th>
            </tr>
        </thead>
        <tbody>
        <% @appointments.each do |appointment| %>
            <tr>
            <td class="collapsing">
                <div class="ui fitted slider checkbox">
                    <%= f.check_box appointment.id %><label></label>
                </div>
            </td>
            <td><%= appointment.date %></td>
            <td><%= appointment.time_slot %></td>
            <td><%= appointment.location %></td>
            <td><%= appointment.details %></td>
            </tr>
        <% end %>
        </tbody>
        <tfoot class="full-width">
            <tr>
            <th></th>
            <th colspan="4">
                <%= f.submit "Request", :class => 'ui small button' %>
            </th>
            </tr>
        </tfoot>
        </table>
    <% end %>
</div>