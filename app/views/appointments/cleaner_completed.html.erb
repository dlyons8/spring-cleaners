<% content_for :title, "My Completed Cleanings" %>
<h2 class="ui center aligned teal header">
  <div class="content">
    My Completed Cleanings
  </div>
</h2>

<table class="ui compact celled table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time Slot</th>
      <th>Neighborhood, City</th>
      <th>Details</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
  <% @appointments.each do |appointment| %>
    <tr>
      <td><%= appointment.date %></td>
      <td><%= appointment.time_slot %></td>
      <td><%= appointment.location %></td>
      <td><%= appointment.details %></td>
      <td><%= link_to appointment.status, appointment%></td>
    </tr>
    <% end %>
  </tbody>
</table>